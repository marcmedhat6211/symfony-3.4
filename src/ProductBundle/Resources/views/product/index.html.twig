{% extends('base.html.twig') %}

{% block body %}
<br>
<h2 style="text-align: center;">Products</h2>
<br>
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<a class="btn btn-success" style="float: right;" href="{{ path('product.create') }}">Add product</a>
<br><br>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Code</th>
        <th>Stock Quantity</th>
        <th>Availability</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.name }}</td>
            <td>{{ product.category }}</td>
            <td>${{ product.price }}</td>
            <td>{{ product.code }}</td>
            <td>{{ product.stock }}</td>
            <td>
                {% if product.availability %}
                    Available
                {% else %}
                    Not Available
                {% endif %}
            </td>
            <td>
                <a class="btn btn-success btn-sm" href="">View</a>
                <a class="btn btn-primary btn-sm" href="{{ path('product.edit', {id: product.id}) }}">Edit</a>
                <a class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product ?')" href="{{ path('product.delete', {id: product.id}) }}">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}